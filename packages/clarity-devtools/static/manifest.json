{
  "name": "Clarity Devtools",
  "version": "0.4.5",
  "version_name": "0.4.5",
  "manifest_version": 2,
  "minimum_chrome_version": "10.0",
  "devtools_page": "devtools.html",
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Clarity Devtools: Open developer tools to activate",
    "default_popup": "popup.html"
  },
  "icons": {"64": "icon.png"},
  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*"],
    "js": ["content.js"]
  }],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": ["http://*/*", "https://*/*", "storage", "tabs"]
}
